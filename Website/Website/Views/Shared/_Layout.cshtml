<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">

    <title>@ViewBag.Title</title>
    <!-- Loading third party fonts -->
    <link href="http://fonts.googleapis.com/css?family=Roboto+Condensed:300,400|" rel="stylesheet" type="text/css">
    <link href="~/Content/font-awesome-4.5.0/css/font-awesome.css" rel="stylesheet" />
    <!-- Loading main css file -->
    <link href="~/Content/theme_style.css" rel="stylesheet" />
    <link href="~/Content/UserLayout.css" rel="stylesheet" />

    <!--[if lt IE 9]>
    <script src="js/ie-support/html5.js"></script>
    <script src="js/ie-support/respond.js"></script>
    <![endif]-->
</head>

<body>
    <div id="site-content">
        <div class="site-header">
            <div class="container">
                <a href="index.html" id="branding">
                    <img src="~/images/logo.png" alt="" class="logo">
                    <div class="logo-text">
                        <h1 class="site-title">Công ty cổ phần Kiến trúc Nội Thất Elife</h1>
                        <small class="site-description">LUXURY DESIGN</small>
                    </div>
                </a> <!-- #branding -->
                <!-- Default snippet for navigation -->
                <div class="main-navigation">
                    <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
                    <ul class="menu">
                        @if (ViewBag.CurrentPage == "home")
                        {
                            <li class="menu-item current-menu-item"><a href="/Home/Index">Trang Chủ</a></li>
                        }
                        else
                        {
                            <li class="menu-item"><a href="/Home/Index">Trang Chủ</a></li>
                        }


                        @if (ViewBag.CurrentPage == "project")
                        {
                            <li class="menu-item current-menu-item"><a href="/Home/Project">Công Trình</a></li>
                        }
                        else
                        {
                            <li class="menu-item"><a href="/Home/Project">Công Trình</a></li>
                        }


                        @if (ViewBag.CurrentPage == "news")
                        {
                            <li class="menu-item current-menu-item"><a href="/Home/News">Tin Tức</a></li>
                        }
                        else
                        {
                            <li class="menu-item"><a href="/Home/News">Tin Tức</a></li>
                        }
                    
                    
                        @if (ViewBag.CurrentPage == "about")
                        {
                            <li class="menu-item current-menu-item"><a href="/Home/About">Chúng Tôi</a></li>
                        }
                        else
                        {
                            <li class="menu-item"><a href="/Home/About">Chúng Tôi</a></li>
                        }
                    
                    
                        @if (ViewBag.CurrentPage == "contact")
                        {
                            <li class="menu-item current-menu-item"><a href="/Home/Contact">Liên Hệ</a></li>
                        }
                        else
                        {
                            <li class="menu-item"><a href="/Home/Contact">Liên Hệ</a></li>


                        }
                    </ul> <!-- .menu -->
                </div> <!-- .main-navigation -->
                <div class="mobile-navigation"></div>
            </div>
        </div> <!-- .site-header -->

        @RenderBody() <!-- RenderBody -->

        <footer class="site-footer">
            <div class="container">
                <div class="pull-left">
                    <address>
                        <strong style="font-size: 17px;">Công ty cổ phần Kiến trúc Nội Thất <a style="color:crimson">ELIFE</a></strong>
                        <p>Biệt thự Bằng Lăng 5-05, Khu đô thị Vinhomes Riverside, quận Long Biên, Hà Nội.</p>
                    </address>
                <br />
                    <a href="#" class="phone">09 1414 7997</a><br/>
                    <a href="#" class="phone">09 1614 7997</a>
                </div> <!-- .pull-left -->
                <div class="pull-right">
                    <div class="social-links">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-google-plus"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-pinterest"></i></a>
                    </div>
                </div> <!-- .pull-right -->
                <div class="colophon" style="font-size: 12px;">&copy;2015 Công ty cổ phần Kiến trúc Nội Thất Elife.</div>
            </div> <!-- .container -->
        </footer> <!-- .site-footer -->
    </div>
    <script src="~/Scripts/jquery-1.11.1.min.js"></script>
    <script src="~/Scripts/plugins.js"></script>
    <script src="~/Scripts/app.js"></script>
</body>
</html>